<!-- arquivo style.css 

/* Element Selector */
h3 {
    color: red;

}

/*class selector, pode ser aplicado em muitos elementos*/
.header-verde {
    color:green;
}

/* id selector, deve ser aplicado em apenas *1* elemento*/
#proposto {
    color:blue;
}

/*atribute selector, seleciona todos os elementos que tenham o atributo lang*/
p[lang] {
   color:blueviolet; 
}

/*universal selector*/
* {
    background-color:antiquewhite;
}


#A {
    color: red;
    font-size: 10px;
}

#B {
    color: black;
    font-size: 50 px;
}

#sulbahia {
    color: greenyellow;
    font-size: 3000 px;
}
-->
  
